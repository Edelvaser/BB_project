# <MySpinnerOption@SpinnerOption>:
#     background_color: color_button if self.state == 'down' else color_button_pressed
#     # background_down: 'atlas://data/images/defaulttheme/button'
#     color: color_font
#: import Window kivy.core.window.Window

<Over>:
    BoxLayout:
        id: pers_acc
        orientation: 'vertical'
        padding: [10,10,10,10]
        spacing: 25

        # Label:
        #     id: 11
        Label:
            id: 11

        Label:
            id: res
            text: 'Ждем остальных участников'
            font_size: 22
            align: "center"
            multiline:True
            # text_size: Window.width - dp(25), None

        Button:
            id: reset
            text: "Обновить"
            opacity: 1
            disabled: False
            font_size: 24
            background_normal : ''
            background_color: 'DD7A7A'
            pos_hint : {"x" : 0.05, "top" : 1}
            size_hint : 0.9, 0.6
            on_press: root.reset_result()

        BoxLayout:
            orientation: 'vertical'
            Label:
                id: 11
            Button:
                text: "Назад"
                font_size: 24
                background_normal : ''
                background_color: 'DD7A7A'
                pos_hint : {"x" : 0.05, "top" : 1}
                size_hint : 0.9, 0.6
                on_press: root.disconnect()
