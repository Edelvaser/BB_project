<StartQuiz>:
    BoxLayout:
        id: pers_acc
        orientation: 'vertical'
        padding: [10,10,10,10]
        spacing: 25

        Label:
            text: 'Ожидаем игроков!\nКак будете уверены, \nчто все подключились.\nСтартуйте игру.'
            font_size: 26
            halign: 'center'

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Номер команды'
                halign: 'center'
                font_size: 18
                text_size: root.width-20, 20
                pos_hint : {"x" : 0.05, "top" : 1}
                size_hint : 0.9, 0.9
            Label:
                id: id_team
                text: 'Номер команды'
                halign: 'center'
                font_size: 18
                text_size: root.width-20, 20
                pos_hint : {"x" : 0.05, "top" : 1}
                size_hint : 0.9, 0.9
            Label:
                id: id_subject
                text: ''
                halign: 'center'
                font_size: 18
                text_size: root.width-20, 20
                pos_hint : {"x" : 0.05, "top" : 1}
                size_hint : 0.9, 0.9
