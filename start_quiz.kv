        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Начать"
                font_size: 24
                background_normal : ''
                background_color: '5ED05B'
                pos_hint : {"x" : 0.05, "top" : 1}
                size_hint : 0.9, 0.6
                on_press: root.ready()

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: "Назад"
